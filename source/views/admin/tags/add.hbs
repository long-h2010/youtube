
<div class="col-8" style="margin: auto;">
    <h1>Thêm chuyên mục</h1>

    <form action="/admin/tags/add" method="post">
        <div class="mb-3">
            <label for="name" class="form-label">Tên</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Nhập tên chuyên mục" required>
        </div>
        <div class="mb-3">
            <label for="meta" class="form-label">Meta</label>
            <input type="text" class="form-control" id="meta" name="meta">
        </div>
        <div class="mb-3">
            <div class="form-group form-check">
                <input class="form-check-input" type="checkbox" name="hide" value="" id="hide" {{check user.hide}}>     
                <label class="form-check-label" for="hide">Hiển thị</label>
            </div>
        </div>
        <div class="mb-3">
            <label for="order" class="form-label">Thứ tự</label>
            <input type="number" class="form-control" id="order" name="order" value="0" required>
        </div>
        <div class="mb-3">
            <input type="submit" value="Lưu" class="btn btn-primary px-4">
        </div>
    </form>
</div>

<script>
    $(document).ready(function(){
        $("#name").keyup(function () {
            
            var text = $.trim($(this).val().toLowerCase());

            console.log("Text name: " + text);

            var text_create;
            text_create = text.replace(/à|á|ạ|ả|ã|ă|ặ|ắ|ẳ|ẵ|â|ấ|ầ|ậ|ẩ|ẫ/g, "a").replace(/\ /g, '-').replace(/đ /g, "d").replace(/é|è|ẹ|ẻ|ẽ/g, "e").replace(/í|ì|ỉ|ĩ|ị/g, "i").replace(/ò|ó|ỏ|ọ|õ|ô|ố|ồ|ộ|ỗ|ổ|ơ|ớ|ờ|ở|ỡ|ợ/g, "o").replace(/ú|ụ|ù|ủ|ũ|ư|ứ|ừ|ự|ữ|ử/g, "u")
            $('#meta').val(text_create);
        }).keyup();
    })
</script>